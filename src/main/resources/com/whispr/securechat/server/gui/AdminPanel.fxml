<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import io.github.palexdev.materialfx.controls.MFXListView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<!--
    Główny kontener z tłem w stylu Material Design.
    Dodajemy arkusz stylów, aby móc korzystać z niestandardowych klas.
-->
<BorderPane fx:controller="com.whispr.securechat.server.gui.AdminPanelController"
            prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #f7f9fc;"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">

    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="50.0" style="-fx-background-color: #ffffff; -fx-border-color: #e0e0e0; -fx-border-width: 0 0 1 0;">
            <padding>
                <Insets left="25.0"/>
            </padding>
            <children>
                <Label text="Panel Administratora Whispr">
                    <font>
                        <Font name="Roboto Medium" size="18.0"/>
                    </font>
                    <textFill>
                        <Color red="0.11" green="0.10" blue="0.17"/>
                    </textFill>
                </Label>
            </children>
        </HBox>
    </top>

    <center>
        <!--
            SplitPane z usuniętym tłem, aby panele-karty mogły mieć własne cienie.
            Większy odstęp między panelami dla lepszej czytelności.
        -->
        <SplitPane dividerPositions="0.35" style="-fx-background-color: transparent; -fx-padding: 15;">
            <items>
                <!-- Karta listy użytkowników -->
                <VBox style="-fx-background-color: #ffffff; -fx-background-radius: 12;">
                    <effect>
                        <DropShadow color="#0000001A" height="20" radius="9" width="20"/>
                    </effect>
                    <padding>
                        <Insets top="15.0" right="15.0" bottom="15.0" left="15.0"/>
                    </padding>
                    <children>
                        <Label text="Zalogowani użytkownicy">
                            <font>
                                <Font name="Roboto Medium" size="16.0"/>
                            </font>
                            <VBox.margin>
                                <Insets bottom="10.0"/>
                            </VBox.margin>
                        </Label>
                        <MFXListView fx:id="usersListView" VBox.vgrow="ALWAYS" style="-fx-border-color: #e0e0e0; -fx-border-radius: 8;"/>
                    </children>
                </VBox>

                <!-- Karta logów serwera -->
                <VBox style="-fx-background-color: #ffffff; -fx-background-radius: 12;">
                    <effect>
                        <DropShadow color="#0000001A" height="20" radius="9" width="20"/>
                    </effect>
                    <padding>
                        <Insets top="15.0" right="15.0" bottom="15.0" left="15.0"/>
                    </padding>
                    <children>
                        <Label text="Logi serwera">
                            <font>
                                <Font name="Roboto Medium" size="16.0"/>
                            </font>
                            <VBox.margin>
                                <Insets bottom="10.0"/>
                            </VBox.margin>
                        </Label>
                        <TextArea fx:id="logTextArea" editable="false" prefHeight="200.0" VBox.vgrow="ALWAYS"
                                  style="-fx-background-color: #f7f9fc; -fx-background-radius: 8; -fx-border-color: #e0e0e0; -fx-border-radius: 8;"/>
                    </children>
                </VBox>
            </items>
        </SplitPane>
    </center>

    <bottom>
        <!--
            Stopka z przyciskami w stylu Material You v3.
            - "Filled Tonal" dla akcji standardowej (lekki kolor tła, ciemny tekst)
            - "Filled" (czerwony) dla akcji destrukcyjnej
            - Duże zaokrąglenie, cienie i podniesiony wygląd.
        -->
        <HBox alignment="CENTER_RIGHT" spacing="15.0" style="-fx-background-color: #ffffff; -fx-border-color: #e0e0e0; -fx-border-width: 1 0 0 0;">
            <padding>
                <Insets top="15.0" right="25.0" bottom="15.0" left="25.0"/>
            </padding>
            <children>
                <MFXButton fx:id="resetPasswordButton"
                           depthLevel="LEVEL1"
                           prefHeight="40.0" prefWidth="220.0"
                           style="-fx-background-color: #E8DEF8; -fx-background-radius: 20;"
                           text="Resetuj hasło użytkownika" textFill="#1D192B">
                    <font>
                        <Font name="Roboto Medium" size="14.0"/>
                    </font>
                </MFXButton>
                <MFXButton fx:id="kickUserButton"
                           buttonType="RAISED"
                           depthLevel="LEVEL1"
                           prefHeight="40.0" prefWidth="180.0"
                           style="-fx-background-color: #B3261E; -fx-background-radius: 20;"
                           text="Wyrzuć użytkownika" textFill="WHITE">
                    <font>
                        <Font name="Roboto Medium" size="14.0"/>
                    </font>
                </MFXButton>
            </children>
        </HBox>
    </bottom>
</BorderPane>
